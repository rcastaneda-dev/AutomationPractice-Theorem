{
  "name": "automation-theorem",
  "version": "1.0.0",
  "description": "Base framework implementation for AutomationPractice.com website",
  "main": "index.js",
  "scripts": {
    "test": "testcafe chrome tests/*.js",
    "test:chrome": "testcafe chrome tests/*.js",
    "test:chrome:headless": "testcafe chrome:headless tests/*.js",
    "test:chrome:ci": "testcafe chrome:headless tests/*.js --reporter spec,json:reports/report.json",
    "test:firefox": "testcafe firefox tests/*.js",
    "test:firefox:headless": "testcafe firefox:headless tests/*.js",
    "test:firefox:ci": "testcafe firefox:headless tests/*.js --reporter spec,json:reports/report.json",
    "test:edge": "testcafe edge tests/*.js",
    "test:parallel": "testcafe chrome tests/*.js --concurrency 2",
    "test:smoke": "testcafe chrome tests/*.js --test-meta smoke=true",
    "test:report": "testcafe chrome tests/*.js --reporter html:reports/report.html",
    "test:ci": "testcafe chrome:headless tests/*.js --reporter spec,json:reports/report.json,html:reports/report.html",
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js --fix --ignore-path .gitignore",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "preinstall": "which link-module-alias && link-module-alias clean || echo",
    "postinstall": "link-module-alias"
  },
  "keywords": [
    "testcafe",
    "node",
    "git",
    "automation",
    "theorem"
  ],
  "_moduleAliases": {
    "@pages": "src/pages",
    "@pageActions": "src/pages/pageActions",
    "@tests": "tests",
    "@config": "config",
    "@constants": "src/constants",
    "@utils": "src/utils",
    "@fixtures": "src/fixtures"
  },
  "author": "@castanedadev",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "link-module-alias": "^1.2.0",
    "path": "^0.12.7",
    "source-map": "^0.5.7",
    "testcafe": "^3.4.0",
    "testcafe-reporter-html": "^1.4.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^7.28.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-webpack": "^0.13.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-lean-imports": "^0.3.3",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "faker": "^5.5.3",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "settings": {
    "import/resolver": "webpack"
  }
}
